<!--顶部-->
<div class="open_top">
  <div class="swiper-wrapper">
      <div class="swiper-slide"><img src="{{lehu-img imgprefix activitymap.IMG}}" /></div>
  </div>
  <div class="pagination"></div>  
</div>

<!--标题价格-->
<div class="open_title">
    <p>{{activitymap.TITLE}}</p>
    <span>总重5.8-6.9斤，吃前详细看一看，松软香甜</span>
    <em><i>￥</i>{{activitymap.ACTIVEPRICE}}</em>
    <del>{{activitymap.GOODSPRICE}}</del>
</div>

<!--券-->
{{#if isopen}}
<div class="open_card">
    <div class="open_head">团长福利</div>
    <div class="open_card_box">
        <p><em><i>¥</i>{{ticketmap.PRICE}}</em>{{ticketmap.TIP}}</p>
        <img src="images/group/pt_q.jpg">
        <span>使用范围：全场通用<br/>{{ticketmap.START_TIME}}至{{ticketmap.END_TIME}}</span>
    </div>
</div>
{{/if}}

<!--券-->
{{^if isopen}}
<div class="jion">
  <div class="jion_box">
    <img src="images/group/pt_tx.png"><em>团长</em><b class="ell">{{groupmap.USER_NAME}}</b>
    <span>去参团<i></i></span>
    <p>{{activitymap.TOTALNUM}}人团<i>已有{{groupmap.PARTAKE_NUM}}人参加</i></p>
  </div>
</div>
{{/if}}

<!--详情-->
<div class="open_main">
  <div class="open_head">图文详情</div>
  {{{activitymap.CONTENT}}}
</div>

<!--底部-->   
{{#if isopen}}
<div class="footer">
  <div class="footer_msg"><img src="images/group/pt_qz.png">{{activitymap.TOTALNUM}}人可成团</div>
  <div class="footer_buy"><i>￥{{activitymap.GOODSPRICE}}</i>原价买</div>
  <div class="footer_open" id="opengroup"><i>￥{{activitymap.ACTIVEPRICE}}</i>开团</div>
</div>
{{/if}}

<!--底部-->
{{^if isopen}}
<div class="footer">
  <div class="footer_time"><img src="images/group/pt_js.png">08:12:35</div>
  <div class="footer_buy"><i>￥{{activitymap.GOODSPRICE}}</i>原价买</div>
  <div class="footer_open" id="joingroup"><i>￥{{activitymap.ACTIVEPRICE}}</i>参团</div>
</div>  
{{/if}}

